{
        "extends": "@atomico/tsconfig/base.json",
        "include": ["src/**/*"],
        "exclude": ["src/stories"],
        "compilerOptions": {
                "strict": true,
                "forceConsistentCasingInFileNames" : true,
                "outDir": "types",
                "skipLibCheck": true,

                "paths": {
                        "~/*": ["./src/*"]
                },
                "types": ["vite/client"]

        }


}